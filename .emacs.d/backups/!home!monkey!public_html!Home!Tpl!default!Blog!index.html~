<script type="text/javascript" >
  $(".imgWrap").mouseover(function(){
  if(!document.all){
  $(this).find(".big-img img").css({"display":"block"});
  }
  });

  $(".imgWrap").mouseout(function(){
  if(!document.all){
  $(this).find(".big-img img").css("display","none");
  }
  
  });
</script>
